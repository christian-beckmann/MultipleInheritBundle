<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="bundle_inheritance.active_bundle_determination_listener.class">Igorynia\Bundle\MultipleInheritanceBundle\EventListener\ActiveBundleDeterminationListener</parameter>
        <parameter key="bundle_inheritance.routing.loader.class">Igorynia\Bundle\MultipleInheritanceBundle\Routing\Loader\InheritanceRouteLoader</parameter>
    </parameters>
    <services>
        <service id="bundle_inheritance.active_bundle_determination_listener"
                 class="%bundle_inheritance.active_bundle_determination_listener.class%">
            <argument type="service" id="kernel"/>
            <argument type="service" id="logger" on-invalid="null"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="bundle_inheritance.routing.loader" class="%bundle_inheritance.routing.loader.class%">
            <argument type="service" id="kernel"/>
            <call method="setResolver">
                <argument type="service" id="routing.resolver"/>
            </call>

            <tag name="routing.loader"/>
        </service>
    </services>
</container>
